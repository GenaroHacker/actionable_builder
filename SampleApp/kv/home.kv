<HomeScreen>:
    ScrollView:
        canvas.before:
            Color:
                rgb: 0, 0.9, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        do_scroll_x: False
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: 30
            spacing: 30
            Label:
                text: 'Home'
                color: (1, 1, 1)
                canvas.before:
                    Color:
                        rgb: 0, 0.8, 0.4
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 100
            GridLayout:
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0.5, 0.5, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text: 'Home'
                    size_hint_y: None
                    height: 50
                    disabled: True
                Button:
                    text: 'Settings'
                    size_hint_y: None
                    height: 50
                    on_press: root.go_to_settings()
                Button:
                    text: 'Profile'
                    size_hint_y: None
                    height: 50
                    on_press: root.go_to_profile()
                Button:
                    text: 'Cart'
                    size_hint_y: None
                    height: 50
                    on_press: root.go_to_cart()
            GridLayout:
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0, 0.8, 0.4
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text: 'Browse Products'
                    size_hint_y: None
                    height: 50
                    on_press: root.browse_products()
                Button:
                    text: 'Search'
                    size_hint_y: None
                    height: 50
                    on_press: root.search()
                Button:
                    text: 'View Promotions'
                    size_hint_y: None
                    height: 50
                    on_press: root.view_promotions()
                Button:
                    text: 'Recommendations'
                    size_hint_y: None
                    height: 50
                    on_press: root.recommendations()